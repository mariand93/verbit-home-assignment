{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "baseUrl": "./",
      "paths": {
        "@api/*": ["src/modules/api/*"],
        "@ui/*": ["src/modules/ui/*"],
        "@tests-api/*": ["tests/modules/api/*"],
        "@tests-ui/*": ["tests/modules/ui/*"],
        "@utils/*": ["utils/*"]
      }
    },
    "include": ["src", "tests", "utils", "playwright.config.ts"]
  }
  